<?xml version="1.0" encoding="utf-8" ?> 
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
                   assembly="TestNHibernate2" 
                   namespace="TestNHibernate2">

    <class name="Personne" table="Persons">
        <id name="Identifiant" column="PersonId" type="long">
            <generator class="identity"></generator>
        </id>
 
        <property name="Prenom"     column="FirstName" type="String" />
        <property name="Nom"        column="LastName"  type="String" />
        <property name="Adresse"    column="Address"   type="String" />
        <property name="Telephone"  column="Phone"     type="String" />
    </class>
 
</hibernate-mapping>
